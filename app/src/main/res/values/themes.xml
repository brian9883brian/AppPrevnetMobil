<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base que hereda de MaterialComponents -->
    <style name="Theme.AppPrevent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorPrimaryVariant">@color/purple_80</item>
        <item name="colorSecondary">@color/purple_grey_40</item>

        <!-- Opcional: color barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Hint text color compatible -->
        <item name="android:textColorHint">?attr/colorOnSurface</item>
    </style>

    <!-- Estilo para entradas modernas con bordes redondeados -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/teal_700</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <!-- Estilo para botÃ³n moderno -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/teal_700</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">6dp</item>
    </style>


</resources>
