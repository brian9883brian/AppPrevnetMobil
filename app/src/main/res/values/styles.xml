<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para los TextInputLayout -->
    <style name="FormFieldStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Estilo para los TextInputEditText -->
    <style name="FormEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>
    <style name="LabelValueText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="LabelValueTextItalic" parent="LabelValueText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#666666</item>
    </style>

</resources>