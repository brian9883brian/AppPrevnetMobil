<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="16dp"
    tools:context=".HistoricoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sensor A -->
        <TextView
            android:id="@+id/tvSensorATitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Velocidades Detectadas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1E40AF"
            android:paddingBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/borde_tabla"
            android:padding="8dp"

            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/contenedorSensorA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- Sensor B -->
        <TextView
            android:id="@+id/tvSensorBTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensajes de Caída"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#DC2626"
            android:paddingBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/borde_tabla"
            android:padding="8dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/contenedorSensorB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- Sensor C -->
        <TextView
            android:id="@+id/tvSensorCTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posibles Caídas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#B45309"
            android:paddingBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/borde_tabla"
            android:padding="8dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/contenedorSensorC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>
</ScrollView>
